# Application Configuration
PORT=8080
DEBUG_MODE=true
SESSION_SECRET=your_session_secret_here

# Database Configuration
DB_HOST=database
DB_PORT=3306
DB_USER=vocab_user
DB_PASSWORD=vocab_pass
DB_NAME=vocabulary_db
# 本地開發使用
DB_CONNECTION_LOCAL=vocab_user:vocab_pass@tcp(127.0.0.1:3306)/vocabulary_db?parseTime=true

# Docker 內部使用
DB_CONNECTION_DOCKER=${DB_USER}:${DB_PASSWORD}@tcp(${DB_HOST}:${DB_PORT})/${DB_NAME}?parseTime=true

# Docker Database Configuration
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=${DB_NAME}
MYSQL_USER=${DB_USER}
MYSQL_PASSWORD=${DB_PASSWORD}

# JWT Authentication
JWT_SECRET=your-secret-key-here 

# Testing Configuration
SKIP_DB=false
TEST_USER=testUser
TEST_PASSWORD=0000